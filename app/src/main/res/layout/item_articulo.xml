<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"

    android:layout_marginEnd="5dp"
    android:layout_width="match_parent">
    <!-- A CardView that contains a TextView -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewarticulo"
        android:layout_width="match_parent"
        android:layout_height="729dp"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="1dp"
        card_view:cardBackgroundColor="#FBFAFA"
        card_view:cardCornerRadius="20dp">


        <ImageView
            android:id="@+id/imgAR"
            android:layout_width="129dp"
            android:layout_height="159dp"
            android:layout_gravity="center|top"
            android:layout_marginLeft="6dp"

            android:src="@drawable/journalcs"></ImageView>

        <LinearLayout

            android:layout_width="405dp"
            android:layout_height="551dp"
            android:layout_gravity="bottom"

            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título :"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtNombreAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="Volúmen :"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Autores :"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/txtAutoresAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="Volúmen :"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Palabras clave: "
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/txtPalabrasAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="Volúmen :"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOI :"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/txtDoiAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="Volúmen :"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha :"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/txtFechaAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="Volúmen :"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resumen :"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/txtresumenAR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="Volúmen :"></TextView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
