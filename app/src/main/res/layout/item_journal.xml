<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="390dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent">
    <!-- A CardView that contains a TextView -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="384dp"
        android:layout_height="390dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        card_view:cardBackgroundColor="#FBFAFA"
        card_view:cardCornerRadius="30dp">


        <ImageView
            android:id="@+id/imgjrn"
            android:layout_width="182dp"
            android:layout_height="149dp"
            android:layout_gravity="center|top"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"

            android:src="@drawable/journalcs"></ImageView>

        <LinearLayout

            android:layout_width="371dp"
            android:layout_height="231dp"

            android:layout_gravity="bottom|center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtJournalN"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Ciencia Sociales y Económicas"

                android:textAlignment="center"

                android:textSize="20dp"
                android:textStyle="bold"></TextView>


            <com.example.revistasuteq.diseñotxt.JustifyTextView
                android:id="@+id/txtJournalD"
                android:layout_width="360dp"
                android:layout_height="178dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/noto_sans"
                android:text="Aquí va la descripción de la revista tal"
                android:textSize="12dp"></com.example.revistasuteq.diseñotxt.JustifyTextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>